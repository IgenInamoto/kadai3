<!--ユーザーの自己紹介ページ-->
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto" >
      <h2>User info</h2>
        <% if @user.errors.any? %>
          <h3><%=@user.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
        <% end %>
        
      <%= form_with model: @user do |f| %>
      <h4>Name</h4>
      <%= f.text_field :name %>
      <h4>Image</h4>
      <%= f.file_field :profile_image %>
      <h4>introduction</h4>
      <%= f.text_area :introduction %><br>
      <%= f.submit 'Update User',class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>